<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/memberName"
            android:layout_width="194dp"
            android:layout_height="44dp"
            android:layout_marginLeft="-7dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Jennifer"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/points"
            android:layout_width="194dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Points: 10"
            tools:layout_editor_absoluteX="194dp"
            tools:layout_editor_absoluteY="0dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/editName"
            android:layout_width="31dp"
            android:layout_height="117dp"
            android:clickable="true"
            android:visibility="visible"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_edit"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="2dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/lockbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="visible"
            app:fabSize="mini"
            app:srcCompat="@mipmap/lock"
            tools:layout_editor_absoluteX="328dp"
            tools:layout_editor_absoluteY="455dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/unlockbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:visibility="visible"
            app:fabSize="mini"
            app:srcCompat="@mipmap/unlock"
            tools:layout_editor_absoluteX="328dp"
            tools:layout_editor_absoluteY="407dp" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="466dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="53dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.68"
                android:text="Cook Dinner \nDeadline:17/11/26 \nPoints:15" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Groceries \nDeadline:17/11/28 \nPoints:10" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
